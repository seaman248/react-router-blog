@import "kouto-swiss"





// COLORS
RED = #F46161
BACKGROUND_BLACK = #373737
TEXT_COLOR = #EFEFEF





// GLOBAL MIXINS
CONTAINER(totalCols, cols)
	gs('fluid', totalCols)
	.container
		col(cols)
		offset((totalCols - cols) / 2)





// MAIN
meyer-reset()

body
	background-color BACKGROUND_BLACK
	color TEXT_COLOR
	font-family Helvetica





// NAV
nav
	width 100%
	height 60px
	margin 0
	padding 0
	border-bottom 1px solid RED
	font-weight bold
nav ul
	width 100%

nav ul li
	list-style-type none
	float left
	margin 22px 20px 0

	a
		font-size em(16)
		text-decoration none
		color RED
		text-transform uppercase

.active
	border-top 3px sold RED





// JUMBOTRON
.Jumbotron
	CONTAINER(12, 9)
	width 100%
	border-bottom 1px solid RED
	padding em(50) 0

	h1
		font-size em(55)
		margin-bottom em(5)

	p
		font-size em(18)
		line-height 1.6
		margin-bottom em(15)

	button
		background-color RED
		border none
		border-radius 8px
		padding 15px
		font-weight bold
		color TEXT_COLOR
		font-size em(17)
		cursor pointer





// POSTS enumeration
.posts
	CONTAINER(12, 9)

	.post
		padding em(20)
		background-color #545454
		margin em(5) 0

	h3
		font-weight bold
		font-size em(28)

		a
			color TEXT_COLOR
			text-decoration none

		a:hover
			color RED

	p
		margin em(15) 0

	span
		font-size em(14)
		font-weight bold






// PAGE TRANSITION
.page-enter
	opacity 0
	transition opacity .1s ease-in

.page-enter.page-enter-active
	opacity 1

.page-leave
	opacity 1
	transition opacity .1s ease-in

.page-leave.page-leave-active
	opacity 0




// PORTFOLIO
.portfolioPage
	CONTAINER(12,9)

	.portfolioItem
		padding em(20)
		background-color #545454
		margin em(5) 0

	h3
		font-weight bold
		font-size em(28)

	p
		margin em(15) 0

	p span
		margin em(15) 0
		font-weight normal
		font-size em(18)

	span span
		font-size em(14)
		font-weight bold







// ABOUT
.aboutPage
	CONTAINER(12,9)







// POST THE
.thePostPage
	CONTAINER(12,9)
	// Header
	.thePostHeader
		border-bottom 1px solid RED

	.toBackButton
		border-left 1px solid RED
		border-right 1px solid RED
		padding em(10) em(20)
		a
			display block
			color TEXT_COLOR
			text-decoration none
			font-size em(17)
			font-weight bold

	// Body
	.postBody
		padding em(10) em(20)
		border-left 1px solid RED
		border-right 1px solid RED
		border-bottom 1px solid RED
		h1
			font-size em(55)
			font-weight bold
			line-height 1
			margin em(10) auto

		p
			font-size em(20)
			line-height 1.4
			margin em(10) auto