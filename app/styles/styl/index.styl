@import "kouto-swiss"

// COLORS
RED = #F46161
BACKGROUND_BLACK = #373737
TEXT_COLOR = #EFEFEF





// MAIN
meyer-reset()

body
	background-color BACKGROUND_BLACK
	color TEXT_COLOR
	font-family Helvetica





// NAV
nav
	width 100%
	height 60px
	margin 0
	padding 0
	border-bottom 1px solid RED
	font-weight bold

nav ul
	width 100%

nav ul li
	list-style-type none
	float left
	margin 22px 20px 0

	a
		font-size em(16)
		text-decoration none
		color RED
		text-transform uppercase





// JUMBOTRON
.Jumbotron
	gs('fluid', 12)
	width 100%
	border-bottom 1px solid RED
	padding em(50) 0

	.container
		col(9)
		offset(1.5)

	h1
		font-size em(55)
		margin-bottom em(5)

	p
		font-size em(18)
		line-height 1.6
		margin-bottom em(15)

	button
		background-color RED
		border none
		border-radius 8px
		padding 15px
		font-weight bold
		color TEXT_COLOR
		font-size em(17)
		cursor pointer